FROM python:3.9

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . /app/

ENV PYTHONPATH=/app

ARG JWT_LOGIN_ACCESS_KEY
ARG DB_HOST
ARG DB_LOGIN_USER
ARG DB_LOGIN_PASSWORD
ARG DB_REGISTER_USER
ARG DB_REGISTER_PASSWORD
ARG DB_LOCATION_USER
ARG DB_LOCATION_PASSWORD
ARG DB_SPARK_USER
ARG DB_SPARK_PASSWORD
ARG DB_AIRFLOW_USER
ARG DB_AIRFLOW_PASSWORD
ARG DB_UPLOADER_USER
ARG DB_UPLOADER_PASSWORD
ARG DB_NAME

CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
